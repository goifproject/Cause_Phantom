<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activity.FundingActivity"
  android:orientation="vertical">

  <android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <ImageButton
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_marginStart="15dp"
      android:background="@drawable/ic_back_arrow" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:textSize="20sp"
      android:textColor="#000000"
      android:lineSpacingExtra="9sp"
      android:text="펀딩"/>
  </android.support.v7.widget.Toolbar>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/nanum_font_bold"
      android:text="리워드 선택 (필수)"
      android:textSize="14sp"
      android:textColor="@color/colorBlack"
      android:lineHeight="20dp"
      android:layout_marginBottom="6dp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="106dp"
      android:background="@drawable/side_primary"
      android:padding="16dp"
      android:orientation="vertical"
      android:layout_marginBottom="10dp">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="30,000원 +"
        android:fontFamily="@font/nanum_font_bold"
        android:lineHeight="16sp"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="2dp"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="티셔츠 일반"
        android:textSize="12sp"
        android:fontFamily="@font/nanum_font_regular"/>
      <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="3,000포인트 적립"
          android:textSize="12sp"
          android:fontFamily="@font/nanum_font_bold"
          android:textColor="@color/colorBlack"
          android:layout_gravity="bottom" />
        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
        <Button
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:background="@drawable/ic_minus"
          android:layout_marginRight="20dp"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textSize="12sp"
          android:lineHeight="13sp"
          android:textColor="@color/colorBlack"
          android:text="3"
          android:layout_marginRight="20dp"/>
        <Button
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:background="@drawable/ic_plus"/>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="106dp"
      android:background="@drawable/side_grey"
      android:padding="16dp"
      android:orientation="vertical"
      android:layout_marginBottom="10dp">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="30,000원 +"
        android:fontFamily="@font/nanum_font_bold"
        android:lineHeight="16sp"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="2dp"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="티셔츠 일반"
        android:textSize="12sp"
        android:fontFamily="@font/nanum_font_regular"/>
      <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="3,000포인트 적립"
          android:textSize="12sp"
          android:fontFamily="@font/nanum_font_bold"
          android:textColor="@color/colorBlack"
          android:layout_gravity="bottom" />
        <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
        <Button
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:background="@drawable/ic_minus"
          android:layout_marginRight="20dp"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textSize="12sp"
          android:lineHeight="13sp"
          android:textColor="@color/colorBlack"
          android:text="3"
          android:layout_marginRight="20dp"/>
        <Button
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:background="@drawable/ic_plus"/>
      </LinearLayout>
    </LinearLayout>

    <View
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@drawable/side_grey"
      android:layout_marginBottom="10dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="후원 추가 (선택)"
      android:fontFamily="@font/nanum_font_bold"
      android:textSize="14sp"
      android:textColor="@color/colorBlack"
      android:layout_marginBottom="10dp"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="52dp"
      android:background="@drawable/side_primary"
      android:hint="금액을 입력하세요"
      android:textSize="12sp"
      android:paddingStart="16dp"
      android:fontFamily="@font/nanum_font_regular"
      android:layout_marginBottom="8dp"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
      <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_info"
        android:layout_gravity="center_vertical"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기부금 0포인트 환급"
        android:fontFamily="@font/nanum_font_bold"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"/>
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="@color/colorPrimary"
      android:text="펀딩하기"
      android:textColor="@color/colorWhite"
      android:fontFamily="@font/nanum_font_regular"
      android:textSize="14sp"/>

  </LinearLayout>



</LinearLayout>