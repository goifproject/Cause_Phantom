<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".activity.DonationDetailActivity">
  <android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <ImageButton
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:layout_marginStart="15dp"
      android:background="@drawable/ic_back_arrow" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:textSize="20sp"
      android:textColor="#000000"
      android:lineSpacingExtra="9sp"
      android:text="기부"/>
  </android.support.v7.widget.Toolbar>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/bg_picture"/>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="시리아 어린이들이 잃어버린 6년"
          android:textSize="14sp"
          android:fontFamily="@font/nanum_font_bold"
          android:textColor="@color/colorBlack"
          android:lineHeight="16sp"
          android:layout_marginBottom="4dp"/>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="20dp">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cause Company"
            android:textSize="10sp"
            android:fontFamily="@font/nanum_font_regular"/>
          <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요 45개 댓글 66개"
            android:textSize="10sp"
            android:fontFamily="@font/nanum_font_regular"/>
        </LinearLayout>
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="여섯 살 무하마드에게 전쟁은 일상입니다. 6년간 이어진 전쟁, 태어나서
지금까지 아이가 본 건 폐허가 된 거리에서 울부짖는 사람뿐입니다.

매 순간 어린이들의 목숨을 위협하는 폭격, 시리아 어린이들의 시간은 두려움과
공포만이 가득합니다."
          android:textSize="10sp"
          android:textColor="@color/colorBlack"
          android:fontFamily="@font/nanum_font_regular"
          android:layout_marginBottom="20dp"/>
        <ProgressBar
          android:layout_width="match_parent"
          android:layout_height="2dp"
          style="@android:style/Widget.ProgressBar.Horizontal"
          android:progress="35"
          android:layout_marginBottom="10dp"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="후원 진행도"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:fontFamily="@font/nanum_font_bold"/>

          <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="서포터즈"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:fontFamily="@font/nanum_font_bold"/>
          <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="남은기간"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/nanum_font_bold"/>
        </LinearLayout>
        
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="10dp">
          <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="67%"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nanum_font_regular"/>
          <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="90명"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nanum_font_regular"/>
          <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="53일"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nanum_font_regular"/>

        </LinearLayout>

        <ProgressBar
          android:layout_width="match_parent"
          android:layout_height="2dp"
          style="@android:style/Widget.ProgressBar.Horizontal"
          android:progress="35"
          android:layout_marginBottom="10dp"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="달성 금액"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:fontFamily="@font/nanum_font_bold"/>
          <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="목표 금액"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/nanum_font_bold"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5,430,000원"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nanum_font_regular"/>
          <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10,000,000 원"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nanum_font_regular"
            android:layout_marginBottom="20dp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="20dp"
          android:id="@+id/contentRecyclerView"></android.support.v7.widget.RecyclerView>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:orientation="horizontal"
          android:layout_marginBottom="15dp">
          <ImageView
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_title_bar"
            android:layout_marginRight="6dp"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로젝트 일정"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nanum_font_bold"/>
        </LinearLayout>

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="2018년 09월 - OOOOOO 개발완료
2018년 10월 - OOOOOO 보고 완료
2018년 11월 07일 - OOOOOO 오픈
2018년 12월 14일 - OOOOOO 펀딩 종료
2018년 12월 - OOOOOO 생산
2018년 12월 22일 ~ 12월 28일 - OOOOOO 발송"
          android:layout_marginBottom="26dp"
          android:textSize="10sp"
          android:fontFamily="@font/nanum_font_regular"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:orientation="horizontal"
          android:layout_marginBottom="15dp">
          <ImageView
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_title_bar"
            android:layout_marginRight="6dp"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의처 정보"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/nanum_font_bold"/>
        </LinearLayout>
        
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="전화번호 : 02-6012-9279
이메일 : delights.sugarfree@gmail.com
위치 : 서울특별시 용산구 원효로97길 33-4"
          android:textSize="10sp"
          android:textColor="@color/colorBlack"
          android:fontFamily="@font/nanum_font_regular"/>
      </LinearLayout>
      
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <Button
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1.5"
          android:background="#e0e0e0"
          android:text="추천"
          android:textColor="@color/colorBlack"
          android:textSize="14sp"
          android:fontFamily="@font/nanum_font_regular"/>
        <Button
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1.5"
          android:background="#e0e0e0"
          android:text="댓글"
          android:textColor="@color/colorBlack"
          android:textSize="14sp"
          android:fontFamily="@font/nanum_font_regular"/>
        <Button
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="7"
          android:background="@color/colorPrimary"
          android:text="기부하기"
          android:textColor="@color/colorWhite"
          android:textSize="14sp"
          android:fontFamily="@font/nanum_font_bold"/>
      </LinearLayout>
      
    </LinearLayout>
  </ScrollView>

</LinearLayout>