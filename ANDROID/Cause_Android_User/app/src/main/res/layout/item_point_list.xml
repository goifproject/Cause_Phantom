<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="20dp">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2018. 06. 30"
    android:textColor="@color/colorBlack"
    android:textSize="10sp"
    android:fontFamily="@font/nanum_font_regular"
    android:layout_marginBottom="18dp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="철장안에서 고기가 될 날을…"
      android:textSize="14sp"
      android:textColor="@color/colorBlack"
      android:singleLine="true"
      android:fontFamily="@font/nanum_font_regular"/>
    <View
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="20,000 포인트"
      android:textSize="14sp"
      android:lineHeight="16sp"
      android:fontFamily="@font/nanum_font_bold"
      android:textColor="#0088ff"/>
  </LinearLayout>
  
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="사용 후 잔액"
      android:textSize="10sp"
      android:fontFamily="@font/nanum_font_regular"/>
    <View
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"/>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="58,000 포인트"
      android:textSize="10sp"
      android:fontFamily="@font/nanum_font_regular"
      android:layout_marginBottom="20dp"/>

  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorGrey"
    android:layout_marginBottom="20dp"/>

</LinearLayout>